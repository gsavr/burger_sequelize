<div class="container">
  <div class="row title justify-content-md-center">
  <h1 class="text-center">Burgerville. Now with online orders.</h1>
  </div>
  <div class="row justify-content-md-center">
  <img src="/assets/img/hamburger.png" alt="burger" class="burgerPic">
  </div>
  <div class="row">
    <div class="col-md-6 text-center">
      <h2>Burger Menu</h2>
      <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            <li class="list-group-item">
               <i class="fas fa-hamburger"></i><span> </span>{{this.burger_name}}
              <button class="btn btn-warning orderBurger {{!-- change-to-devoured --}}" data-id="{{id}}" data-devoured="{{devoured}}" data-toggle="collapse" data-target="#collapseExample{{id}}" aria-expanded="false" aria-controls="collapseExample">
                  {{#if devoured}}Order Finished{{else}}Order{{/if}}
              </button>
              <div class="collapse" id="collapseExample{{id}}">
                <div class="card card-body custcard">
                  Please select your name from the Customer List
                  <div class="customers">
                
                  </div>
                </div>
              </div>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6 text-center">
      <h2>Open Orders</h2>
      <ul class="list-group">
        {{#each burgers}}
          {{#if devoured}}
          <li class="list-group-item">
            <i class="fas fa-hamburger"></i><span> </span>{{this.burger_name}} <br>Ordered by: {{Customers.customer_name}} {{this.CustomerId}}
            <button class="btn btn-warning change-from-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
                  {{#if devoured}}Order Finished{{else}}Order{{/if}}<span> </span><i class="fas fa-check"></i>
              </button>
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
  <div class="col-md-6 text-center bottom">
    <h2 >Add a Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="burger"></label>
      <input type="text" placeholder="Burger Name" id="newBurger" name="name" class="text-center">
    </div>
    <button type="button" class="btn btn-warning" id="addBurger">Add</button>
  </form>
  </div>
  <div class="col-md-6 text-center bottom">
    <h2 >Register Customer</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="customer"></label>
      <input type="text" placeholder="Enter Customer Name" id="newCustomer" name="name" class="text-center">
    </div>
    <button type="button" class="btn btn-warning" id="addCustomer">Register</button>
  </form>
    </div>
  </div>
  </div>
</div>


<script type="text/javascript">

  $(document).on("click",".change-to-devoured", function(event) {
    var burger_id = $(this).data("burger_id");
    var cust_id = $(this).data("cust_id");
    var devoured = 1
  ///add customer and change state
    var burgerState = {
      id: burger_id,
      devoured: devoured,
      CustomerId: cust_id
    };

    // Send the PUT request.
    $.ajax("/api/burgers/", {
      type: "PUT",
      data: burgerState
    })
    .then(
      function() {
        // Reload the page to get the updated list
        location.reload();
      }
    );//console.log("api/burgers/"+id)
  });

  $(".orderBurger").on("click", function(event){
    var burger_id = $(this).data("id");

    $.ajax("/api/customers",{
      type: "GET",
      //data: customers,
      success: function(customers){
        //console.log(customers.customers.length)
        var data = customers.customers
        //console.log(data)
        $(".customers").empty();
        for(i=0;i<data.length;i++){
          $(".customers").append(`<button class="btn btn-dark change-to-devoured custButton" data-burger_id="${burger_id}" data-cust_id="${data[i].id}" ><i class="far fa-user"></i><span> </span>${data[i].customer_name}</button><br>`)
          //console.log(data[i].customer_name)
        }
      }
    })
 });

  $(".change-from-devoured").on("click", function(event) {
    var id = $(this).data("id");
    var devoured = 0
    var burgerState = {
      id: id,
      devoured: devoured
    };

    // Send the PUT request.
    $.ajax("/api/burgers/" , {
      type: "PUT",
      data: burgerState
    }).then(
      function() {
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

  $("#addBurger").on("click", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();
    var burgerName = $("#newBurger").val().trim();
    var newBurger = {
      burger_name: burgerName,
      devoured: 0,
    }
    console.log(newBurger);
    $("#newBurger").val("")

    // Send the Burger POST request.
    $.ajax("/api/burgers", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("created new Burger");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

  $("#addCustomer").on("click", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();
    var customerName = $("#newCustomer").val().trim();
    var newCustomer = {
      customer_name: customerName,
    }
    console.log(newBurger);
    $("#newCustomer").val("")

  // Send the Customer POST request.
    $.ajax("/api/customers", {
      type: "POST",
      data: newCustomer
    }).then(
      function() {
        console.log("Registered new Customer");
        // Reload the page to get the updated list
        alert("Customer Registered")
        location.reload();
      }
    );
  });
</script>